<div class="container">
  <h2>New Product</h2>
  <div class="row">
    <form class="col s12" action="/products" method="post" enctype="multipart/form-data">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <input type="hidden" name="product[user_id]" value="<%=current_user.id%>">
      <div class="row">
        <div class="input-field col s6">
          <input type="text" name="product[name]" value="">
          <label for="name">Product Name</label>
        </div>
        <div class="file-field input-field col s6">
          <div class="btn">
            <span>File</span>
            <input type="file" name="product[image]">
          </div>
          <div class="file-path-wrapper">
            <input type="text" class="file-path validate">
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col s12">
          <div class="row">
            <div class="input-field col s12">
              <textarea id="description" name="product[description]" class="materialize-textarea"></textarea>
              <label for="description">Description</label>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col s2 offset-s10">
          <button type="submit" class="btn waves-effect waves-light" name="action">Submit</button>
        </div>
      </div>
    </form>
  </div>
</div>
