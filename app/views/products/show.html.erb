<div class="container">
  <h2><%=@product.name%></h2>
  <div class="row">
    <div class="col s7">
      <img src="<%=@product.image.url%>" class="materialboxed" width="300px" >
    </div>
    <div class="col s5">
      <div class="card-panel teal center-align">
        <span class="white-text">Send a message to the seller!</span>
        <a class="saves-effect waves-light btn light-blue" href="/">Message</a>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="divider"></div>
      <div class="section">
        <h4>Description</h4>
        <p><%=@product.description%></p>
      </div>
  </div>
</div>
